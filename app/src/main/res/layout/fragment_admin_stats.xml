<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#F9FAFB"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:text="لوحة تحليلات الإدارة"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="5dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@android:drawable/ic_menu_info_details"
                    android:tint="#3B82F6"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/totalProductsText"
                    android:text="عدد المنتجات: 0"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="5dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:tint="#10B981"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:id="@+id/totalRevenueText"
                    android:text="الإيرادات الإجمالية: 0"
                    android:textSize="18sp"
                    android:textColor="#1E293B"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:text="أعلى المنتجات تقييماً"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/topRatedContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:clipToOutline="true"
            android:elevation="3dp"
            android:layout_marginHorizontal="0dp"/>

        <TextView
            android:text="أكثر المنتجات مبيعاً"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/mostSoldContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="3dp"
            android:clipToOutline="true"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="0dp"/>

    </LinearLayout>
</ScrollView>
