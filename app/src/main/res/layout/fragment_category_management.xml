<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F9FAFB"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/categoryNameEdit"
        android:hint="اسم الفئة"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="12dp"
        android:background="@drawable/edittext_bg"
        android:textColor="#1E293B"
        android:textColorHint="#6B7280"/>

    <Button
        android:id="@+id/selectImageButton"
        android:text="اختر صورة"
        android:textColor="#3B82F6"
        android:background="@drawable/button_outline_bg"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/addCategoryButton"
        android:text="إضافة الفئة"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_gradient_bg"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/categoryRecycler"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
